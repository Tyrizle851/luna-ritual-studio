# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AB_TESTING=true
ENABLE_VIDEO_ADS=true
ENABLE_CAROUSEL_ADS=true
ENABLE_AUTO_SCHEDULING=true
ENABLE_AI_LEARNING=true

# ============================================
# RATE LIMITS (requests per hour)
# ============================================
RATE_LIMIT_OPENAI=500
RATE_LIMIT_RUNWAY=100
RATE_LIMIT_INSTAGRAM=25
RATE_LIMIT_TIKTOK=20
RATE_LIMIT_PINTEREST=50

# ============================================
# NOTES
# ============================================
# 1. Generate N8N_ENCRYPTION_KEY with: openssl rand -hex 32
# 2. Store this file securely - it contains sensitive credentials
# 3. Use environment-specific files: .env.development, .env.production
# 4. For production, use secret management services (AWS Secrets Manager, Vault, etc.)
# 5. Rotate credentials regularly (every 90 days recommended)
